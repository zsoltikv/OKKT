<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OKKT25.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OKKT25"
    Shell.FlyoutBehavior="Disabled"
    Title="OKKT25"
    Shell.BackgroundColor="#1f1f1f"
    Shell.TitleColor="#FFD700"
    Shell.ForegroundColor="#FFD700"
    Shell.NavBarHasShadow="False">

    <Shell.Resources>
        <!-- TabBar stílus -->
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="#121212" />
            <Setter Property="Shell.TabBarTitleColor" Value="#FFD700" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="#888888" />
        </Style>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Új kirándulás"
            Icon="travel.png"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Korábbi"
            Icon="folder.png"
            ContentTemplate="{DataTemplate local:PastTripsPage}" />
    </TabBar>
</Shell>