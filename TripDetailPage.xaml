<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OKKT25.TripDetailPage"
             Title="Kirándulás részletei"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <VerticalStackLayout x:Name="DetailLayout"
                             Padding="0"
                             Spacing="15"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                <Button Grid.Column="0"
                    Grid.Row="0"
                    Text="📸 Fotó hozzáadása"
                    FontSize="16"
                    BackgroundColor="#FF9800"
                    TextColor="#121212"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnAddPhotoClicked"/>

                <Button Grid.Column="1"
                    Grid.Row="0"
                    Text="📄 PDF exportálás"
                    FontSize="16"
                    BackgroundColor="#FF9800"
                    TextColor="#121212"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnExportPdfClicked"/>

                <Button Grid.Column="0"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Text="🗑️ Kirándulás törlése"
                    FontSize="16"
                    BackgroundColor="#D32F2F"
                    TextColor="#FFFFFF"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Clicked="OnDeleteTripClicked"/>
            </Grid>

            <Frame 
                Padding="10,5"
                CornerRadius="15"
                BackgroundColor="#FF9800"
                HasShadow="True"
                HorizontalOptions="Start"
                Margin="0,10,0,0">
            <Label x:Name="PhotosLabel"
                       Text="Fotók: 0"
                       TextColor="#121212"
                       FontSize="16"
                       FontAttributes="Bold"/>
            </Frame>

            <CollectionView x:Name="PhotosCollection"
                        ItemsLayout="HorizontalList"
                        HeightRequest="100"
                        Margin="0,10,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5"
                           Margin="5"
                           HasShadow="False"
                           BackgroundColor="#1E1E1E"
                           BorderColor="#3C3C3C"
                           CornerRadius="10">
                            <Image Source="{Binding}"
                               Aspect="AspectFill"
                               WidthRequest="100"
                               HeightRequest="100"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>