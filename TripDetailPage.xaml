<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OKKT25.TripDetailPage"
             Title="Kirándulus részletei"
             BackgroundColor="#F5F5F5">

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- A részletes tartalom -->
            <VerticalStackLayout x:Name="DetailLayout" Padding="0" Spacing="15"/>

            <!-- Fotó hozzáadása gomb -->
            <Button Text="Fotó hozzáadása"
                    FontSize="16"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnAddPhotoClicked"/>
            
            <Button Text="PDF exportálás"
                    FontSize="16"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnExportPdfClicked"/>

            <!-- Galéria megjelenítése -->
            <CollectionView x:Name="PhotosCollection"
                            ItemsLayout="HorizontalList"
                            HeightRequest="100"
                            Margin="0,10,0,20">
                
                <CollectionView.ItemTemplate>
                    
                    <DataTemplate>
                        
                        <Frame Padding="5" Margin="5" HasShadow="False">
                            <Image Source="{Binding}" Aspect="AspectFill" WidthRequest="100" HeightRequest="100"/>
                        </Frame>
                        
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
                
            </CollectionView>

        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>