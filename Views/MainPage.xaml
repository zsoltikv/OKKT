<?xml version="1.0" encoding="utf-8"?>

<ContentPage 
    
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="OKKT25.MainPage"
    Title="🎒 Osztálykirándulás tervező"
    BackgroundColor="#121212">

    <ScrollView>
        
        <VerticalStackLayout Padding="20" Spacing="15">

            <Frame 
                CornerRadius="15"
                BackgroundColor="#1E1E1E"
                BorderColor="#3C3C3C"
                HasShadow="True"
                Padding="20">

                <VerticalStackLayout Spacing="12">

                    <Label 
                        Text="Kirándulás neve:"
                        FontAttributes="Bold"
                        FontFamily="Arial"
                        FontSize="14"
                        TextColor="#FFD700"/>

                    <Frame 
                        CornerRadius="8"
                        BackgroundColor="#2D2D2D"
                        BorderColor="#3C3C3C"
                        HasShadow="False"
                        Padding="10">

                        <Entry 
                            x:Name="TripName"
                            Placeholder="pl: Osztálykirándulás"
                            Keyboard="Text"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            PlaceholderColor="#C8C8C8"
                            FontFamily="Arial"
                            FontSize="13"
                            CharacterSpacing="1"/>
                    </Frame>

                    <Label 
                        Text="Kirándulás helyszíne:"
                        FontAttributes="Bold"
                        FontFamily="Arial"
                        FontSize="14"
                        TextColor="#FFD700"/>

                    <Frame 
                        CornerRadius="8"
                        BackgroundColor="#2D2D2D"
                        BorderColor="#3C3C3C"
                        HasShadow="False"
                        Padding="10">

                        <Entry 
                            x:Name="TripDestination"
                            Placeholder="pl: Budapest"
                            Keyboard="Text"
                            BackgroundColor="Transparent"
                            TextColor="#FFFFFF"
                            PlaceholderColor="#C8C8C8"
                            FontFamily="Arial"
                            FontSize="13"
                            CharacterSpacing="1"/>
                    </Frame>

                    <Label 
                        Text="Kirándulás dátuma:"
                        FontAttributes="Bold"
                        FontFamily="Arial"
                        FontSize="14"
                        TextColor="#FFD700"/>

                    <VerticalStackLayout 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center">

                        <Grid ColumnSpacing="10">
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Frame 
                                Grid.Column="0"
                                CornerRadius="8"
                                BackgroundColor="#2D2D2D"
                                BorderColor="#3C3C3C"
                                HasShadow="False"
                                Padding="10"
                                HorizontalOptions="FillAndExpand">

                                <DatePicker 
                                    x:Name="TripDateStart"
                                    DateSelected="OnStartDateChanged"
                                    BackgroundColor="Transparent"
                                    TextColor="#FFFFFF"
                                    FontFamily="Arial"
                                    FontSize="11"
                                    HorizontalOptions="FillAndExpand"/>
                            </Frame>

                            <Frame 
                                Grid.Column="1"
                                CornerRadius="8"
                                BackgroundColor="#2D2D2D"
                                BorderColor="#3C3C3C"
                                HasShadow="False"
                                Padding="10"
                                HorizontalOptions="FillAndExpand">

                                <DatePicker 
                                    x:Name="TripDateEnd"
                                    DateSelected="OnEndDateChanged"
                                    BackgroundColor="Transparent"
                                    TextColor="#FFFFFF"
                                    FontFamily="Arial"
                                    FontSize="11"
                                    HorizontalOptions="FillAndExpand"/>
                            </Frame>
                            
                        </Grid>
                        
                    </VerticalStackLayout>

                    <Frame 
                        CornerRadius="10"
                        BackgroundColor="#1E1E1E"
                        BorderColor="#3C3C3C"
                        HasShadow="False"
                        Padding="20"
                        Margin="0,10,0,0">

                        <VerticalStackLayout Spacing="10">

                            <Label 
                                Text="Költségek:"
                                FontAttributes="Bold"
                                FontFamily="Arial"
                                FontSize="16"
                                TextColor="#FFD700"/>

                            <Frame 
                                CornerRadius="8"
                                BackgroundColor="#2D2D2D"
                                BorderColor="#3C3C3C"
                                HasShadow="False"
                                Padding="10"
                                IsVisible="False">

                                <StackLayout 
                                    x:Name="DynamicCostsLayout"
                                    Spacing="5"/>
                            </Frame>

                            <Button 
                                Text="+ Új költség"
                                Clicked="OnAddCostClicked"
                                BackgroundColor="#FF9800"
                                TextColor="#121212"
                                FontFamily="Arial"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                Padding="15,10"/>
                            
                        </VerticalStackLayout>
                        
                    </Frame>

                    <Label 
                        Text="Zsebpénz megadása:"
                        FontAttributes="Bold"
                        FontFamily="Arial"
                        FontSize="14"
                        TextColor="#FFD700"
                        Margin="0,5,0,0"/>

                    <HorizontalStackLayout 
                        Spacing="20"
                        Margin="0">

                        <RadioButton 
                            x:Name="RadioGrouped"
                            Content="Csoportosan"
                            GroupName="PocketMoneyType"
                            IsChecked="True"
                            TextColor="#FFFFFF"
                            FontFamily="Arial"
                            FontSize="11"
                            CheckedChanged="OnPocketMoneyTypeChanged"/>

                        <RadioButton 
                            x:Name="RadioPerPerson"
                            Content="Személyenként"
                            GroupName="PocketMoneyType"
                            TextColor="#FFFFFF"
                            FontFamily="Arial"
                            FontSize="11"
                            CheckedChanged="OnPocketMoneyTypeChanged"/>
                        
                    </HorizontalStackLayout>

                    <Frame 
                        CornerRadius="10"
                        BackgroundColor="#1E1E1E"
                        BorderColor="#3C3C3C"
                        HasShadow="False"
                        Padding="10"
                        Margin="0,0,0,0">

                        <VerticalStackLayout 
                            x:Name="LayoutPocketMoney"
                            Spacing="10">

                            <Label 
                                x:Name="LabelAveragePocketMoney"
                                Text="💰 Átlagos zsebpénz (Ft/fő):"
                                FontAttributes="Bold"
                                FontFamily="Arial"
                                FontSize="14"
                                TextColor="#FFD700"
                                Margin="0,0,0,0"
                                IsVisible="{Binding Source={x:Reference RadioGrouped}, Path=IsChecked}"/>

                            <Entry 
                                x:Name="EntryAveragePocketMoney"
                                Placeholder="pl. 5000"
                                Keyboard="Numeric"
                                BackgroundColor="Transparent"
                                TextColor="#FFFFFF"
                                PlaceholderColor="#C8C8C8"
                                FontFamily="Arial"
                                FontSize="13"
                                CharacterSpacing="1"/>
                            
                        </VerticalStackLayout>
                        
                    </Frame>
                    
                </VerticalStackLayout>
                
            </Frame>

            <Button 
                x:Name="BtnCalculate"
                Text="Számítás"
                FontSize="14"
                FontAttributes="Bold"
                FontFamily="Arial"
                BackgroundColor="#FFA500"
                TextColor="#121212"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,10,0,0"
                Clicked="OnCalculateClicked"/>

            <Frame 
                CornerRadius="10"
                BackgroundColor="#1E1E1E"
                BorderColor="#3C3C3C"
                HasShadow="True"
                Padding="15"
                Margin="0,10,0,0"
                IsVisible="False">

                <VerticalStackLayout 
                    x:Name="LayoutResults"
                    IsVisible="False"
                    Spacing="12" />
            </Frame>

            <Button 
                x:Name="BtnReset"
                Text="Mezők visszaállítása"
                Clicked="ButtonResetClicked"
                BackgroundColor="#FFA500"
                TextColor="#121212"
                FontFamily="Arial"
                FontSize="14"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="45"
                Margin="0,10,0,0"/>
            
            <Button 
                x:Name="BtnSave"
                Text="💾 Mentés"
                Clicked="OnSaveClicked"
                BackgroundColor="#FFA500"
                TextColor="#121212"
                FontFamily="Arial"
                FontSize="14"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="45"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>