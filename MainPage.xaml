<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OKKT25.MainPage"
             Title="🎒 Osztálykirándulás Tervező"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Beviteli kártya -->
            <Frame CornerRadius="15" 
                   HasShadow="True"
                   BackgroundColor="White"
                   Padding="20">
                <VerticalStackLayout Spacing="12">

                    <StackLayout Padding="20" Spacing="10">

                        <Label Text="Költségek:" 
                               FontAttributes="Bold"
                               TextColor="#424242"/>

                        <!-- Dinamikus költségekhez konténer -->
                        <StackLayout x:Name="DynamicCostsLayout" Spacing="5">
                            <!-- Ide kerülnek a dinamikus költség mezők -->
                        </StackLayout>

                        <!-- Plusz gomb -->
                        <Button Text="+ Új költség"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                Clicked="OnAddCostClicked"/>

                    </StackLayout>

                    <!-- Résztvevők száma -->
                    <Label Text="Résztvevők száma:" 
                           FontAttributes="Bold"
                           TextColor="#424242"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="EntryParticipants"
                           Placeholder="pl. 25"
                           Keyboard="Numeric"
                           BackgroundColor="#F5F5F5"
                           TextChanged="OnParticipantsChanged"
                           TextColor="#424242"/>

                    <!-- Hátralévő hónapok -->
                    <Label Text="Hátralévő idő (hónapok):" 
                           FontAttributes="Bold"
                           TextColor="#424242"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="EntryMonthsLeft"
                           Placeholder="pl. 6"
                           Keyboard="Numeric"
                           BackgroundColor="#F5F5F5"
                           TextColor="#424242"/>

                    <!-- Zsebpénz típus -->
                    <Label Text="Zsebpénz megadása:" 
                           FontAttributes="Bold"
                           TextColor="#424242"
                           Margin="0,10,0,0"/>
                    <HorizontalStackLayout Spacing="20">
                        <RadioButton x:Name="RadioGrouped"
                                    Content="Csoportosan"
                                    GroupName="PocketMoneyType"
                                    IsChecked="True"
                                    CheckedChanged="OnPocketMoneyTypeChanged"
                                     TextColor="#424242"/>
                        <RadioButton x:Name="RadioPerPerson"
                                    Content="Személyenként"
                                    GroupName="PocketMoneyType"
                                    CheckedChanged="OnPocketMoneyTypeChanged"
                                     TextColor="#424242"/>
                    </HorizontalStackLayout>

                    <!-- Zsebpénz bevitel dinamikus terület -->
                    <VerticalStackLayout x:Name="LayoutPocketMoney" 
                                        Spacing="8"
                                        Margin="0,10,0,0"
                                        />

                </VerticalStackLayout>
            </Frame>

            <!-- Számítás gomb -->
            <Button x:Name="BtnCalculate"
                    Text="Számítás"
                    FontSize="18"
                    FontAttributes="Bold"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnCalculateClicked"/>

            <!-- Eredmények terület -->
            <VerticalStackLayout x:Name="LayoutResults" 
                                IsVisible="False"
                                Spacing="12"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>