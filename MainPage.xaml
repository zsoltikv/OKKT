<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OKKT25.MainPage"
             Title="🎒 Osztálykirándulás Tervező">

    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Beviteli kártya -->
            <Frame CornerRadius="15" 
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Kirándulás neve:" 
                           FontAttributes="Bold"/>
                    <Entry x:Name="TripName"
                            Placeholder="pl: Osztálykirándulás"
                            Keyboard="Text"/>

                    <Label Text="Kirándulás helyszíne:" 
                            FontAttributes="Bold"/>
                    <Entry x:Name="TripDestination"
                            Placeholder="pl: Budapest"
                            Keyboard="Text"/>

                    <Label Text="Kirándulás dátuma:" 
                            FontAttributes="Bold"/>
                    <HorizontalStackLayout Spacing="10">
                        <DatePicker x:Name="TripDateStart"
                                MinimumDate="{Binding MinimumDate}"
                                Date="{Binding Date}"/>
                        <DatePicker x:Name="TripDateEnd"
                                MinimumDate="{Binding MinimumDate}"
                                Date="{Binding Date}"/>
                    </HorizontalStackLayout>

                    <StackLayout Padding="20" Spacing="10">

                        <Label Text="Költségek:" 
                               FontAttributes="Bold"/>

                        <!-- Dinamikus költségekhez konténer -->
                        <StackLayout x:Name="DynamicCostsLayout" Spacing="5">
                            <!-- Ide kerülnek a dinamikus költség mezők -->
                        </StackLayout>

                        <!-- Plusz gomb -->
                        <Button Text="+ Új költség"
                                Clicked="OnAddCostClicked"/>

                    </StackLayout>

                    <!-- Résztvevők száma -->
                    <Label Text="Résztvevők száma:" 
                           FontAttributes="Bold"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="EntryParticipants"
                           Placeholder="pl. 25"
                           Keyboard="Numeric"
                           TextChanged="OnParticipantsChanged"/>

                    <!-- Hátralévő hónapok -->
                    <Label Text="Hátralévő idő (hónapok):" 
                           FontAttributes="Bold"
                           Margin="0,10,0,0"/>
                    <Entry x:Name="EntryMonthsLeft"
                           Placeholder="pl. 6"
                           Keyboard="Numeric"/>

                    <!-- Zsebpénz típus -->
                    <Label Text="Zsebpénz megadása:" 
                           FontAttributes="Bold"
                           Margin="0,10,0,0"/>
                    <HorizontalStackLayout Spacing="20">
                        <RadioButton x:Name="RadioGrouped"
                                    Content="Csoportosan"
                                    GroupName="PocketMoneyType"
                                    IsChecked="True"
                                    CheckedChanged="OnPocketMoneyTypeChanged"/>
                        <RadioButton x:Name="RadioPerPerson"
                                    Content="Személyenként"
                                    GroupName="PocketMoneyType"
                                    CheckedChanged="OnPocketMoneyTypeChanged"/>
                    </HorizontalStackLayout>

                    <!-- Zsebpénz bevitel dinamikus terület -->
                    <VerticalStackLayout x:Name="LayoutPocketMoney" 
                                        Spacing="8"
                                        Margin="0,10,0,0"
                                        />

                </VerticalStackLayout>
            </Frame>

            <!-- Számítás gomb -->
            <Button x:Name="BtnCalculate"
                    Text="Számítás"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnCalculateClicked"/>

            <!-- Eredmények terület -->
            <VerticalStackLayout x:Name="LayoutResults" 
                                IsVisible="False"
                                Spacing="12"/>

            <Button x:Name="BtnSave" Text="💾 Mentés" Clicked="OnSaveClicked" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>